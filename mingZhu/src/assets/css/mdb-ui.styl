.lxx-radio
  font-size .9rem
.designers{
  .lxx-radio-group{
    .lxx-radio{
      padding-left: 25px!important;
      font-weight: 400;
      font-size: 13px;
      &::before{
        // top: -3px!important;
        border-width: 1px!important;
      }
      &::after{
        border-width: 1px!important;
        // top: -3px!important;
        width: 13px!important;
        height 13px!important;
      }
      &.checked{
        &::before{
          width: 13px!important;
          height 13px!important;
        }
      }
    }
  }
  .lxx-multiselect{
    .head{
      &.unchecked{
        color: rgba(0,0,0,.6)!important;
      }
    }
  }
  .lxx-scrollbar__thumb{
    background-image: none!important;
  }
}
form.filter-header.card
  > div
    margin .4rem

.mdb-search
  margin 4.5rem 0 1.25rem 0
  border-top none !important
  .searchBox
    height 2.5rem
    position relative
    overflow hidden
    background #f8f8f8
    display flex
    margin-top 2rem
    border-bottom-left-radius 3px
    border-top-left-radius 3px
    border 1px solid #f1f1f1
    border-left 1px solid #f1f1f1
    &.active
      border: 1px solid #09a0db;
      box-shadow:inset 0px 1px 1px rgba(0,0,0,0.075), 0px 0px 8px rgba(102,175,233,0.6);
    input
      flex 1
      border none
      outline none
      font 0.875rem "PingFangSC-Regular"
      color #b0b0b0
      letter-spacing 0.16px
      background none
      // box-shadow 0 2px rgba(0,0,0,.1)
  .searchBox > .el-icon-search
    margin 0 0.32rem 0 1.875rem
    font-weight bold
    line-height 2.5rem
  .submit
    cursor pointer
    background #4285f4
    border .125rem solid #4285f4
    font-weight 700
    font-size 1rem
    height 2.5rem
    line-height 2.25rem
    -webkit-appearance none
    text-align center
    box-sizing border-box
    padding 0
    margin-bottom .625rem
    display block
    color #fff
    border-top-right-radius 3px
    border-bottom-right-radius 3px
    transition background-color 300ms ease-out
    width 9.7875rem
    margin-left -2.5rem !important
    margin-top 2rem

/* 下拉搜索框的样式重置 */
.lxx-multiselect
  .menu-footer
    border-top 1px solid #ced4da
    text-align center
    > span
      display inline-block!important
      text-align center!important
      .menu-opr
        width 3.8rem
        border-radius 3px

.lxx-dropdown
  border-bottom 1px solid #e6e6e6!important
